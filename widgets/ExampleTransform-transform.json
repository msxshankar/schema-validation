{
  "metadata": {
    "spec-version": "1.4"
  },
  "configuration-groups": [
    {
      "label": "Schema Validation",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Path Name",
          "name": "Schema Path Name",
          "widget-attributes": {
            "width": "large",
            "default": "Example: /path/schema.json"
          }
        },
        {
          "widget-type": "textbox",
          "name": "myOptionalOption",
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "label": "Get output schema",
            "button-class": "btn-primary",
            "plugin-method": "configurePipeline"
          }
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema"
    }
  ]
}
